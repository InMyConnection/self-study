<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="changeText" Content="Change the label if checked" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="-0.017,0.485" Click="changeText_Click"/>
        <CheckBox x:Name="enableCheckBox" Content="Enable label changing" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Center" Grid.Row="1" 
                   Text="Press the button to change my text" TextWrapping="Wrap" VerticalAlignment="Center" 
                   Grid.ColumnSpan="2" Height="56" Width="544" FontSize="48" FontFamily="Agency FB"/>
    </Grid>
</Window>
